{
	"Name": "Notion Tasks",
	"Version": "0.1.0.0",
	"Author": "Tom Kregenbild",
	"Actions": [
		{
			"Name": "Notion Today Task",
			"UUID": "com.tom-kregenbild.notion-tasks.today",
			"Icon": "imgs/actionIcon",
			"Tooltip": "Shows a Notion task scheduled for today",
			"States": [
				{
					"Image": "imgs/key",
					"TitleAlignment": "middle",
					"FontSize": 12
				}
			],
			"SupportedInMultiActions": false,
			"PropertyInspectorPath": "ui/task-key-inspector.html",
			"Controllers": [
				"Keypad"
			]
		},
		{
			"Name": "Notion Active Tasks",
			"UUID": "com.tom-kregenbild.notion-tasks.active.dial",
			"Icon": "imgs/actionIcon",
			"Tooltip": "Shows active vs total Notion tasks",
			"PropertyInspectorPath": "ui/dial-inspector.html",
			"Controllers": [
				"Encoder"
			],
			"Encoder": {
				"layout": "layouts/active-summary.touch-layout.json",
				"background": "touchscreen-background",
				"TriggerDescription": {
					"Rotate": "No action"
				}
			},
			"States": [
				{
					"Image": "imgs/key",
					"Title": "",
					"TitleAlignment": "middle",
					"FontSize": 12
				}
			]
		},
		{
			"Name": "Notion Next Meeting",
			"UUID": "com.tom-kregenbild.notion-tasks.next-meeting.dial",
			"Icon": "imgs/actionIcon",
			"Tooltip": "Shows the next upcoming meeting from your Notion database",
			"PropertyInspectorPath": "ui/next-meeting-inspector.html",
			"Controllers": [
				"Encoder"
			],
			"Encoder": {
				"layout": "layouts/next-meeting.touch-layout.json",
				"background": "touchscreen-background",
				"TriggerDescription": {
					"Rotate": "No action"
				}
			},
			"States": [
				{
					"Image": "imgs/key",
					"Title": "",
					"TitleAlignment": "middle",
					"FontSize": 12
				}
			]
		}
	],
	"Category": "Notion Tasks",
	"CategoryIcon": "imgs/plugin/category-icon",
	"CodePath": "bin/plugin.js",
	"Description": "Created dynamic buttons per tasks in a Notion database and allows to check them as complete by clicking on the button",
	"Icon": "imgs/plugin/marketplace",
	"SDKVersion": 2,
	"Software": {
		"MinimumVersion": "6.5"
	},
	"OS": [
		{
			"Platform": "mac",
			"MinimumVersion": "12"
		},
		{
			"Platform": "windows",
			"MinimumVersion": "10"
		}
	],
	"Nodejs": {
		"Version": "20",
		"Debug": "enabled"
	},
	"UUID": "com.tom-kregenbild.notion-tasks"
}
