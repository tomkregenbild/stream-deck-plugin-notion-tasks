{
  "$schema": "https://schemas.elgato.com/streamdeck/plugins/layout.json",
  "id": "notion-habit-summary",
  "items": [
    {
      "key": "heading",
      "type": "text",
      "rect": [
        12,
        8,
        120,
        18
      ],
      "font": {
        "size": 16,
        "weight": 600
      },
      "alignment": "center"
    },
    {
      "key": "value",
      "type": "text",
      "rect": [
        12,
        30,
        120,
        28
      ],
      "font": {
        "size": 26,
        "weight": 700
      },
      "alignment": "center"
    },
    {
      "key": "progress",
      "type": "bar",
      "rect": [
        12,
        64,
        120,
        14
      ],
      "background": "#1f2937",
      "bar_fill_c": "#22c55e",
      "border_w": 2,
      "value": 0,
      "range": {
        "min": 0,
        "max": 1
      }
    }
  ]
}