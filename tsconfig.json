{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"customConditions": [
			"node"
		],
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"noImplicitOverride": true
	},
	"include": [
		"src/**/*.ts",
		"src/index.js",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
